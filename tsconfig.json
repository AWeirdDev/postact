{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,

    "jsx": "react-jsx",
    "jsxImportSource": "@postact/jsx",

    // Bundler mode
    "moduleResolution": "bundler",
    "composite": true,
    "verbatimModuleSyntax": true,
    "noEmit": false,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
  },
  "references": [
    { "path": "./packages/postact-core" },
    { "path": "./packages/postact-jsx" },
  ],
  "include": [
    "packages/*/src/*",
    "packages/postact-core/src/subscribables/base.ts",
    "packages/postact-core/src/subscribables/dependent.ts",
    "packages/postact-core/src/subscribables/state.ts",
    "packages/postact-core/src/subscribables/ref.ts",
    "packages/postact-core/src/subscribables/later.ts",
    "packages/postact-core/src/utilities/routes.ts",
  ],
  "exclude": ["vite.config.ts"],
}
