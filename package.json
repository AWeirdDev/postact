{
  "name": "postact",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "docs:dev": "bun --bun vitepress dev docs",
    "docs:build": "bun --bun vitepress build docs",
    "docs:preview": "bun --bun vitepress preview docs",
    "build": "bun run --filter './packages/*' build",
    "fmt": "oxfmt '!**/dist/**/*' '!**/*.json' packages/postact-core"
  },
  "dependencies": {
    "@postact/core": "workspace:*",
    "@postact/jsx": "workspace:*"
  },
  "devDependencies": {
    "@shikijs/vitepress-twoslash": "^3.20.0",
    "@testing-library/dom": "^10.4.1",
    "@types/bun": "latest",
    "@vitest/ui": "^4.0.16",
    "@vue/compiler-dom": "^3.5.26",
    "@vue/server-renderer": "^3.5.26",
    "jsdom": "^27.4.0",
    "oxfmt": "^0.24.0",
    "remark-shiki-twoslash": "^3.1.3",
    "rolldown": "^1.0.0-beta.9-commit.d91dfb5",
    "shiki": "^3.20.0",
    "vite": "^7.3.0",
    "vitepress": "^2.0.0-alpha.15",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "workspaces": [
    "packages/*"
  ]
}
