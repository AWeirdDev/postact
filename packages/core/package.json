{
  "name": "@postact/core",
  "description": "Simple, fast, lightweight web dev.",
  "version": "0.0.14",
  "keywords": [
    "virtual dom",
    "jsx",
    "html",
    "states",
    "client side",
    "template",
    "library"
  ],
  "author": {
    "email": "awdjared@gmail.com",
    "name": "AWeirdDev",
    "url": "https://github.com/AWeirdDev"
  },
  "repository": {
    "url": "https://github.com/AWeirdDev/postact"
  },

  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "development": "./src/index.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "dependencies": {
    "@postact/serde": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "files": [
    "./src/**/*",
    "./dist/*"
  ],
  "license": "MIT",
  "moduleResolution": "bundler",
  "scripts": {
    "build": "tsc --build --clean && tsc --build && rolldown -m -c",
    "fmt": "oxfmt '!*.{md,json}'"
  },
  "trustedDependencies": []
}
