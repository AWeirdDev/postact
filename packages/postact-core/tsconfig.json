{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "noEmit": false,

    "outDir": "./dist",
    "rootDir": "./src",

    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    "strict": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",
    "jsxImportSource": "./postact-jsx",
  },
  "include": ["./src/**/*"],
}
